{
    "manifest_version": 2,
    "name": "Dislike button for Facebook",
    "version": "0.5.2",
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "js": [ "jquery.min.js", "jquery.caret.js", "jquery.fontface.js", "content.js" ],
            "matches": [ "http://*/*", "https://*/*" ],
            "run_at": "document_start"
        }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "description": "Dislike button for Facebook",
    "homepage_url": "http://idislike.hatemzidi.com/",
    "icons": {
        "128": "icons/icon128.png",
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
    },

    "permissions": [ "tabs", "http://*/*", "https://*/*", "contextMenus", "webNavigation", "notifications", "cookies", "webRequest" ],
    "web_accessible_resources": [ "images/*", "fonts/*" ]
}
